<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema base de la app -->
    <style name="Theme.SystemAppDaily" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- Tema para el login (status bar transparente) -->
    <style name="Theme.SystemAppDaily.Login">
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowBackground">@color/primary_dark</item>
    </style>

</resources>
